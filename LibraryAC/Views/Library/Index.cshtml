@using LibraryAC.Models.LibraryViewModels
@model LibraryViewModel
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>


<table class="table table-striped">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Author</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var book in Model.Books)
    {   
        <tr>
            <td>
                @book.Id
            </td>
            <td>
                @book.Name
            </td>
            <td>
                @book.Author
            </td>
        </tr>
    }
    
    </tbody>
</table>

